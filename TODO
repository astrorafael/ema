import json
import datetime
import re


class DateTimeEncoder(json.JSONEncoder):

    def default(self, o):
        if  isinstance(o, datetime.datetime):
            return o.strftime("%Y-%m-%dT%H:%M:%S")

        # Let the base class default method raise the TypeError
        return json.JSONEncoder.default(self, o)


